<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true" android:state_focused="true">
    <shape>
        <solid android:color="@color/green1"/>
	   <padding
	        android:left="4dp"
	        android:top="4dp"
	        android:right="4dp"
	        android:bottom="4dp" />
	  	<corners android:radius="10dp" />
	</shape></item>

<item android:state_pressed="true" android:state_focused="false">
    <shape>
        <solid android:color="@color/green1"/>
	   <padding
	        android:left="4dp"
	        android:top="4dp"
	        android:right="4dp"
	        android:bottom="4dp" />
	  	<corners android:radius="10dp" />
	</shape>
</item>

<item android:state_pressed="false" android:state_focused="true">
    <shape>
        <solid android:color="@color/green1"/>
        <padding
	        android:left="4dp"
	        android:top="4dp"
	        android:right="4dp"
	        android:bottom="4dp" />
	  	<corners android:radius="10dp" />
	  	<stroke android:width="4dp" android:color="@color/yellow"/>
	</shape>
</item>

<item android:state_pressed="false" android:state_focused="false">
    <shape>
        <solid android:color="@color/green1"/>
        <padding
	        android:left="4dp"
	        android:top="4dp"
	        android:right="4dp"
	        android:bottom="4dp" />
	  	<corners android:radius="10dp" />
	  	<stroke android:width="4dp" android:color="@color/yellow"/>
	</shape>
</item>

<item android:state_enabled="true">
    <shape>
       <padding
	        android:left="4dp"
	        android:top="4dp"
	        android:right="4dp"
	        android:bottom="4dp" />
    </shape>
</item>

</selector>