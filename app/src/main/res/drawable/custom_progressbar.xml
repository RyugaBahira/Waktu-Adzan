<?xml version="1.0" encoding="utf-8"?>
<layer-list
        xmlns:android="http://schemas.android.com/apk/res/android">
        <item
                android:id="@android:id/background">
                <shape>
                        <corners
                                android:radius="5dip" />
                        <gradient
                                android:startColor="@color/putih_trans"
                                android:centerColor="@color/green1"
                                android:centerY="0.50"
                                android:endColor="@color/putih_trans"
                                android:angle="270" />
                </shape>
        </item>
        <item
                android:id="@android:id/progress">
                <clip>
                        <shape>
                                <corners
                                        android:radius="5dip" />
                                <gradient
                                        android:startColor="@color/yellow2"
                                        android:centerColor="@color/yellow"
                                		android:endColor="@color/yellow2"
                                        android:angle="90" />
                        </shape>
                </clip>
        </item>
</layer-list>