<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green1</item>
        <item name="colorPrimaryDark">@color/green1</item>
        <item name="colorAccent">@color/yellow</item>

        <item name="android:datePickerStyle">@style/TimePickerStyle</item>
    </style>

    <style name="MenuLeft" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:textColorPrimary">@color/warna_backgound</item>
        <item name="android:textColor">@color/warna_backgound</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="PesanGlobal" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:textColorPrimary">@color/warna_backgound</item>
        <item name="android:textColor">@color/warna_backgound</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="TimePickerStyle" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:textColor">@color/warna_backgound</item>
        <item name="android:textColorPrimary">@color/warna_backgound</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progressbar</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">10dip</item>
    </style>

</resources>
